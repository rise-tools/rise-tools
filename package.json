{
  "name": "rise-tools",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "example/*",
    "docs"
  ],
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "postinstall": "npm run check-deps",
    "build": "tsc --build tsconfig.build.json --force --verbose",
    "watch": "tsc --build tsconfig.build.json --watch",
    "clean": "del-cli ./packages/*/lib ./packages/*/*.tsbuildinfo",
    "check-deps": "check-dependency-version-consistency .",
    "test": "jest",
    "release": "npm run clean && npm run build && release-it"
  },
  "devDependencies": {
    "@babel/runtime": "^7.18.9",
    "@commitlint/config-conventional": "^17.0.2",
    "@release-it-plugins/workspaces": "^4.2.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@testing-library/react": "^14.2.2",
    "@testing-library/react-native": "^12.4.5",
    "@tsconfig/node18": "^18.2.3",
    "@types/jest": "^28.1.2",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "check-dependency-version-consistency": "^3.0.3",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "release-it": "^15.4.1",
    "typescript": "^5.1.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "prettierPath": null,
    "moduleNameMapper": {
      "@rise-tools/(.*)": "<rootDir>/packages/$1/src",
      "^react-native$": "react-native-web"
    },
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|expo).*/)"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": false,
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "packages/*"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "apps/*/package.json",
            "example/*/package.json"
          ]
        }
      }
    }
  },
  "version": "0.3.0"
}
